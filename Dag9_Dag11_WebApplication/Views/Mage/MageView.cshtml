<!DOCTYPE html>
@model ModelMage
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MageView</title>

</head>
<body>
    <div>
    @using (Html.BeginForm("GetMage", "Mage"))
        {
        <p>
                @Html.Label("ID:") <br />
                @Html.TextBox("ID")

                <br>
                @if (ViewBag.fejl == "Fejl")
                {
                <p style="color: red;">Mage findes ikke i systemet, prøv med et andet id</p>
                }

                @Html.ValidationMessage("ID", "", new { @class = "text-danger" })
        </p>
         <p>
         <input type="submit" value="Søg:">
         </p>
        }

        <div>
        @if (Model != null)
        {
            @using (Html.BeginForm("updateMage", "Mage"))
            { 
                @Html.Hidden("ID")

        <p>
                @Html.Label("Navn:") <br />
                @Html.TextBox("Name")
                <br>
                        @Html.ValidationMessage("Name", "", new { @class = "text-danger" })
                
        </p>

        <p>
                @Html.Label("Is Dark:") <br />
                @Html.TextBox("IsDark")
                <br>
                        @Html.ValidationMessage("IsDark","", new { @class = "text-danger" })
        </p>
         <p>
         <input type="submit" value="Opdater">
         </p>
            }
        }
        else{
            @Html.Hidden("ID")
            <p>
                @Html.Label("Navn:") <br />
                @Html.TextBox("Name", null, new { @readonly = "readonly" })
                </p>

            <p>
                @Html.Label("Is Dark:") <br />
                @Html.TextBox("IsDark", null, new { @readonly = "readonly" })
                </p> 
            }
        
    </div>

</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
